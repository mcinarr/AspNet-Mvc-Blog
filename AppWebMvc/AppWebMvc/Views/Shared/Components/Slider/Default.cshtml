@model IEnumerable<App.Persistence.Data.Entity.Post>

	@foreach (var item in Model)
{
	<div class="slider-item">
		<div class="slider-item-content">
			<div class="post-thumb mb-4">
				<a href="#">
					@if (item.PostImage != null)
					{
						<img src="@item.PostImage.ImageUrl" alt="" class="img-fluid">
					}
					else{
						<img src="../images/slider/slider1.jpg" alt="" class="img-fluid">
					}
					
				</a>
			</div>
			<div class="slider-post-content">
				<span class="cat-name text-color font-sm font-extra text-uppercase letter-spacing">@item.CategoryPosts[0].Category.CategoryName</span>
				<h3 class="post-title mt-1"><a href="#">@item.PostTitle</a></h3>
				<span class=" text-muted  text-capitalize">@item.PostDate.ToShortDateString()</span>
			</div>
		</div>
	</div>
}
